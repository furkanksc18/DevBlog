@model LoginViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Hoş Geldiniz</h2>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                        
                        <!-- Kullanıcı Adı/E-posta -->
                        <div class="mb-4">
                            <label asp-for="Nick" class="form-label fw-semibold">Kullanıcı Adı veya E-posta</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-person text-primary"></i>
                                </span>
                                <input asp-for="Nick" type="text" class="form-control border-start-0" required>
                            </div>
                            <span asp-validation-for="Nick" class="text-danger small"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock text-primary"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control border-start-0" required>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Giriş Butonu -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg py-3 rounded-3" type="submit">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </button>
                        </div>
                        
                        <!-- Kayıt Linki -->
                        <div class="text-center mt-4">
                            <p class="mb-0">Hesabın yok mu? <a class="text-primary fw-semibold text-decoration-none" asp-action="Register">Kayıt Ol</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
